<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_marginBottom="12dp">

  <com.google.android.material.imageview.ShapeableImageView
    android:id="@+id/ivAvatar"
    style="@style/ImageView.Circle"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    app:layout_constraintBottom_toTopOf="@+id/guidelineUp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/jennie" />

  <com.google.android.material.textview.MaterialTextView
    android:id="@+id/tvName"
    style="@style/TextView.Black.OneLine"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:text="jennie_bp_kkkk"
    android:textStyle="bold"
    app:layout_constraintBottom_toTopOf="@id/guidelineUp"
    app:layout_constraintEnd_toStartOf="@+id/icMore"
    app:layout_constraintStart_toEndOf="@+id/ivAvatar"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/icMore"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    android:padding="@dimen/icon_padding"
    android:src="@drawable/ic_more"
    app:layout_constraintBottom_toTopOf="@+id/guidelineUp"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <View
    android:id="@+id/guidelineUp"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="?attr/actionBarSize"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <ImageView
    android:id="@+id/ivPicture"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:scaleType="centerCrop"
    android:src="@drawable/jennie_big_3x4"
    app:layout_constraintDimensionRatio="3:4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/guidelineUp" />

  <ImageView
    android:id="@+id/icLike"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    android:padding="@dimen/icon_padding"
    android:src="@drawable/ic_like_border"
    app:layout_constraintBottom_toTopOf="@+id/guidelineDown"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivPicture" />

  <ImageView
    android:id="@+id/icComments"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    android:padding="@dimen/icon_padding"
    android:src="@drawable/ic_comment"
    app:layout_constraintBottom_toTopOf="@+id/guidelineDown"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toEndOf="@id/icLike"
    app:layout_constraintTop_toBottomOf="@id/ivPicture" />

  <ImageView
    android:id="@+id/icDirect"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    android:padding="@dimen/icon_padding"
    android:src="@drawable/ic_direct"
    app:layout_constraintBottom_toTopOf="@+id/guidelineDown"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintStart_toEndOf="@id/icComments"
    app:layout_constraintTop_toBottomOf="@id/ivPicture" />

  <ImageView
    android:id="@+id/icSave"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="@dimen/app_bar_padding"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:layout_marginBottom="@dimen/app_bar_padding"
    android:padding="@dimen/icon_padding"
    android:src="@drawable/ic_save"
    app:layout_constraintBottom_toTopOf="@+id/guidelineDown"
    app:layout_constraintDimensionRatio="1:1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivPicture" />

  <View
    android:id="@+id/guidelineDown"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_marginTop="?attr/actionBarSize"
    android:visibility="invisible"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/ivPicture" />

  <TextView
    android:id="@+id/tvLikes"
    style="@style/TextView.Black.OneLine"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:text="@string/template_likes"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/guidelineDown" />

  <TextView
    android:id="@+id/tvTitle"
    style="@style/TextView.Black.OneLine"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:maxLines="2"
    android:text="jennie_bp_kkkk I did a lot of things today"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvLikes" />

  <TextView
    android:id="@+id/tvShowAllComments"
    style="@style/TextView.Gray.OneLine"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/app_bar_padding"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="@dimen/app_bar_padding"
    android:text="@string/template_show_all_comments"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>