<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InstagramPage" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white_smoke_app</item>
        <item name="colorPrimaryVariant">@color/gray_app</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextView.Black" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextView.Gray" parent="">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="TextView.Black.OneLine" parent="TextView.Black">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextView.Gray.OneLine" parent="TextView.Gray">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ImageView.Circle" parent="">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.App.CornerSize50</item>
        <item name="android:padding">1dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/gray_app</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>